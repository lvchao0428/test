                for(var i = 0; i < YJ_oLi.length; i++){
                    if(i%2){
                        YJ_oLi[i].style.borderRight = 0;	
                    }
                }
                
                
                var YJF_remen = document.getElementById("YJF_remen");
                var YJF_oLi = YJF_remen.getElementsByTagName("li");
                
                for(var y = 0; y < YJF_oLi.length; y++){
                    if(y%3 == 2){
                        YJF_oLi[y].style.borderRight = 0;	
                    }
                }
            }()
        </script>
    </div>
    <!--热门板块 结束-->

    
