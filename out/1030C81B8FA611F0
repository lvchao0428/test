		function gethuajiaData (pid) {
			jQuery.ajax({
				"type": "GET",
				"scriptCharset": "GB2312",
				"url":"http://api.huajia.xici.net/v1/shop/get_for_post?pid="+pid+"&jsoncallback=?",
				"dataType":"jsonp",
				"beforeSend": function() {
					jQuery('div[data-type="main_topic"]').eq(0).before(huajiaHtml.wait);
				},
				"error": function(data){
					jQuery('.store_box').html(huajiaHtml.error);
				},
				"success": function(data) {
					if ("undefined" != typeof data.Result) {
						function replaceTag (ret){
							if (isNaN(ret)) {
								ret = ret.replace(/</g,'&lt;').replace(/>/g,'&gt;');
							}
							return ret;
						}
						var str = '<div class="store_left">'
									+'<div class="store_news">'
										+'<h3><a href="http://huajia.xici.net/s/'+replaceTag(data.Result.shop.domain)+'" target="_blank">'+replaceTag(data.Result.shop.name)+'</a></h3>'
										+'<div class="store_con">'
											+'<a href="http://huajia.xici.net/s/'+replaceTag(data.Result.shop.domain)+'" target="_blank" class="store_img"><img alt="" src="http://huajiaimg.xici.net/services/Shop/ShopLogo.ashx?shopID='+replaceTag(data.Result.shop.id)+'&shopLogoSizeType=3" width="120" height="120" /></a>'
											+'<ul class="store_info">'
												+'<li><strong>商户城市：</strong>'+replaceTag(data.Result.geo.city)+'</li>'
												+'<li><strong class="store_adressname">商户地址：</strong><span class="store_adress">'+replaceTag(data.Result.geo.address)+'</span></li>'
												+'<li><strong>联系电话：</strong>'+replaceTag(data.Result.shop.phone)+'</li>'
												+'<li><strong>商户类型：</strong>'+replaceTag(data.Result.shop.category)+'</li>'
											+'</ul>'
										+'</div>'
									+'</div>'
									+'<div class="store_num">'
										+'<span class="s_fans"><strong>粉 丝 数：</strong>'+replaceTag(data.Result.shop.fans)+'</span>'
										+'<span class="s_rank"><strong>商户排行：</strong>'+replaceTag(data.Result.shop.rank)+'</span>'
										+'<a href="http://huajia.xici.net/s/'+replaceTag(data.Result.shop.domain)+'" target="_blank">'+replaceTag(data.Result.shop.notice)+'</a>'
									+'</div>'
								+'</div>'
								+'<div class="store_right">'
									+'<a href="http://huajia.xici.net/biz/'+replaceTag(data.Result.shop.domain)+'" target="_blank" class="huajia_logo"><img width="180" height="40" src="http://huajiaimg.xici.net/images/'+replaceTag(data.Result.shop.img)+'"></a>'
									+'<div class="hj_map" id="dituContent"></div>'
								+'</div>';
						jQuery('.store_box').html(str);
						//创建marker
						baiduMap.addMarker = function (lat,lng){
							//标注点数组
							var markerArr = [{title:"",content:"",isOpen:0,icon:{w:21,h:21,l:0,t:0,x:6,lb:5}}];
							for(var i=0;i<markerArr.length;i++){
								var json = markerArr[i];
								var point = new BMap.Point(lat,lng);
								var iconImg = baiduMap.createIcon(json.icon);
								var marker = new BMap.Marker(point,{icon:iconImg});
								var iw = baiduMap.createInfoWindow(i);
								var label = new BMap.Label(json.title,{"offset":new BMap.Size(json.icon.lb-json.icon.x+10,-20)});
								marker.setLabel(label);
								map.addOverlay(marker);
								label.setStyle({
									borderColor:"#808080",
									color:"#333",
									cursor:"pointer"
								});
							}
						}
						//创建InfoWindow
						baiduMap.createInfoWindow = function (i){
							var markerArr = [{title:"",content:"",isOpen:0,icon:{w:21,h:21,l:0,t:0,x:6,lb:5}}];
							var json = markerArr[i];
							var iw = new BMap.InfoWindow("<b class='iw_poi_title' title='" + json.title + "'>" + json.title + "</b><div class='iw_poi_content'>"+json.content+"</div>");
							return iw;
						};
						//创建和初始化地图函数：
						if(!isNaN(data.Result.geo.lng) && !isNaN(data.Result.geo.lat)){
							baiduMap.createMap(data.Result.geo.lng,data.Result.geo.lat,15);//创建地图
							baiduMap.setMapEvent();//设置地图事件
							baiduMap.addMarker(data.Result.geo.lng,data.Result.geo.lat);//向地图中添加marker
							//baiduMap.mapSign();
						} else {
							jQuery('.store_box').html(huajiaHtml.error);
						}
					} else {
						jQuery('.store_box').html(huajiaHtml.error);
					}
				}
			});
