		function gethuajiaData (pid) {
			jQuery.ajax({
				"type": "GET",
				"scriptCharset": "GB2312",
				"url":"http://api.huajia.xici.net/v1/shop/get_for_post?pid="+pid+"&jsoncallback=?",
				"dataType":"jsonp",
