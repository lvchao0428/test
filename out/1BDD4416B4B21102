		function PreNextPageFunc(e) {
			var keyNum, gotoUrl, prePage, nextPage, prePLen, nextPLen, altKey, ctrlKey,shiftKey;
			var srcElement, isGoon, Url, typeNum;
			var keyArr = new Array();
			typeNum = 0;
			keyNum = e.which || window.event.keyCode;
			prePage = document.getElementsByName('prePage');
			nextPage = document.getElementsByName('nextPage');
			prePLen = prePage.length;
			nextPLen = nextPage.length;
			isGoon = false;
			if (navigator.userAgent.toLowerCase().indexOf('msie')>0) {
				altKey = window.event.altKey;
				ctrlKey = window.event.ctrlKey;
				shiftKey = window.event.shiftKey;
			} else {
				altKey = e.altKey;
				ctrlKey = e.ctrlKey;
				shiftKey = e.shiftKey;
			}
			srcElement = e.target ? e.target : window.event.srcElement;
			if (srcElement && srcElement.tagName.toLowerCase() == 'input' && srcElement.getAttribute("type") == "text") return true;
			if (keyNum == 13 && !altKey && !ctrlKey && !shiftKey) {
				if (srcElement && srcElement.tagName.toLowerCase() == 'input' && (srcElement.getAttribute("type") == "button" || srcElement.getAttribute("type") == "submit")) return true;
				Url = document.URL;
				gotoUrl = Url.substring(0, Url.lastIndexOf('.htm') + 4);
				gotoUrl += '#change';
				typeNum = 1;
				isGoon = true;
			}
			if (keyNum == 37 && prePLen > 0) {
				isGoon = true;
				gotoUrl = prePage[0].href;
				typeNum = 2;
			}
			if (keyNum == 39 && nextPLen > 0) {
				isGoon = true;
				gotoUrl = nextPage[0].href;
				typeNum = 2;
			}
			if (isGoon) {
				onkeydownStatHook(e, typeNum);
