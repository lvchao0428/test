				 	if(gopage!=null && gopage!=""){
        				var r,re;
        				re = /\d*/i;
        				r = gopage.match(re);
        				if (r!=gopage){
        					alert("请输入数字页码");
        					return;
        				}
    				}else{
    					alert("请输入数字页码");
    					return;
    				}
    				//window.location.href= "/dmsg/2_99221673_"+gopage+".html";
				 	window.location.href= "/msg,99221673,"+gopage+".html";
				 }
