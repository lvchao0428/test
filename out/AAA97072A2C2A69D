function disposeSource(){
	$(".main-bd").each(function() {   
		var floorId = $(this).attr("floorId");
		var source = $(this).find("div").attr("style","color:#999").text();
		if(source.length > 0){
			$("#source-"+floorId).html("来自：" + source.replace("来自我的",""));
			//$(this).find("div").attr("style","color:#999").remove();
		} else {
			$("#source-"+floorId).html("来自：网页");
		}		
	});
}


function onCollectAjax(tid,bid){
	var handle = PassportSC.cookieHandle();
	 if(handle){
	 Haley.run(['plugins/common/system.js','plugins/request/ajax.js'], function(H){
		 var ajax = new H.Ajax({url:'/user/favorite/addFavorite.at', method:'post', parameters:{"tid":tid, "bid":bid}});
		 ajax.onComplete = function(responseObject){
			 var param = eval('(' + responseObject.textString + ')');
			 if(param == 1) Haley.SAA.alert('恭喜你，收藏成功！可到“我的收藏”查看');
			 else if(param == 2) Haley.SAA.alert('你已经收藏过啦！');
			 else Haley.SAA.alert('对不起！收藏失败，请重试！');
		 };
		 ajax.start();
    });
	} else {
		Haley.SAA.openPassPort(); 
	}
}

