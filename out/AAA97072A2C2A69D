<script type="text/javascript">
function deleteTopicItem(tid,uid,flag){//flag用于判断是否被保护
		Haley.run(['plugins/common/system.js','plugins/request/ajax.js'], function(H){
			Haley.SAA.confirm("您确认要删除选中帖子吗？", function(param){
				if(param){
					var ajax = new H.Ajax({url:'/club/manage/topic/deleteTopic.at?bid=10199', method:'post', 
					parameters:{"tid":tid,"uid":uid,"flag":flag}});
					ajax.onComplete = function(responseObject){
						function callback(){ window.location.reload(false);};
						if(responseObject.textString=="deleteSuccess"){
							Haley.SAA.alert("恭喜你，删除成功！",callback);
						}else if(responseObject.textString=="isProtected"){
							Haley.SAA.alert("对不起，该贴被保护或为精华帖，不允许删除！",callback);
						}else {
							Haley.SAA.alert("对不起，操作异常，删除失败！",callback);
						}
					};
						ajax.start();
				}
			});
		});
	}							
function deletePosts(tid,uid,fid){
		Haley.run(['plugins/request/ajax.js'], function(H){
		 Haley.SAA.confirm("您确认要删除选中帖子吗？", function(param){
		 	if(param){
		 		var ajax = new H.Ajax({url:'/club/manage/topic/deletePosts.at?bid=10199', method:'post', parameters:{
				"tid":tid,"uid":uid,"fid":fid}});
			ajax.onComplete = function(responseObject){
			function callback(){ window.location.reload(false);};
				if(responseObject.textString=="deletePostsSuccess"){
					Haley.SAA.alert("恭喜你，删除跟帖成功！",callback);
				}else{
					Haley.SAA.alert("对不起，删除跟帖失败！",callback);
				}
			
			};
			ajax.start();
		 	}
		 });
			
		});
	
	}


