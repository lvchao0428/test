function commit(id){
	if (!PassportSC.cookieHandle()) {
		Haley.SAA.openPassPort();
		return;
	}
	var v;
	if(id==0)
		v = "";
	else v = "回"+id+"楼："
    //alert(v);     
    setValue(v); 
    window.location.href='#commit';
}
//引用
function quoteCommit(obj, flag){
	editorModel = "classical";
	$(this).addClass("on").siblings().removeClass("on");
	$("#simple").hide();
	$(".toClassical").addClass("on").siblings().removeClass("on");;
	$(".editor_easytext").attr("disabled","disabled");
	$("#simple input[type='hidden']").attr("disabled","disabled");	//removeAttr;
	$("#simpleContainer").val('');
	$("#classical input[type='hidden']").removeAttr("disabled");
	$("#container").removeAttr("disabled");
	$("#classical").show();	
	if (!PassportSC.cookieHandle()) {
		Haley.SAA.openPassPort();
		return;
	}
	var floor = $("#floor-" + flag);
	var nickname = floor.find(".user-nickname").text();
	var time = floor.find(".floor-time").text();
	var context = floor.find(".main-bd").html();
	if(context && nickname && time){
		var re = $("<span>"+ context + "</span>");
		re.find("img").remove();
		
		var quote = re.find("div[flag='true']");
		var Qhtml = "";
		if(quote && quote.length > 0){
			Qhtml = "<div style=\"border:1px solid #dfdfe5;background:#f7f7ff;padding:5px\">" + quote.html() + "</div>";
		}		
		re.find("div[flag='true']").remove();
		var html = "<div flag='true' style=\"border:1px solid #dfdfe5;background:#f7f7ff;padding:5px\">";
		html = html + Qhtml;
		html = html +"<div style=\"margin:5px 15px;color:#7e808c;font-size:12px;overflow:hidden\">";
		html = html +"<div>" + nickname+ " 发表于 " + time + "</div>";
		html = html +"<div style=\"font-size:14px;color:#333;line-height:24px\">" + re.html() + "</div>";
		html = html +"</div>";
		html = html +"</div><br>";
		setValue(html);		
        window.location.href='#commit';
	}
}

function getChildByTagWithClass(pE, tN, cN){
	var childNodes = pE.children;
	for(var i=0, len=childNodes.length; i<len; i++){
		if(childNodes[i].tagName.toLowerCase() == tN.toLowerCase() && childNodes[i].className == cN){
			return childNodes[i];
		}
	}
	return null;
}
function getPreviousSibling(element){
	var node = null;
	while(node = element.previousSibling){
		if(node.nodeType == 1){ break;}
		element = node;
	}
	return node;
}



function trim(txt,limit){
	var div=document.createElement('div');
	div.style.display='none';
	document.body.appendChild(div);
	div.innerHTML=txt.replace(/^\s+|\s+$/g,'');
	var domarr=[div.childNodes];
	for(var doms=domarr.shift();domarr.length>=0 && doms; doms=domarr.shift()){
		for(var i=0;i<doms.length;){
			var dom=doms[i];
			var type=dom.nodeType;
			if(limit<=0 || dom.nodeName.toLowerCase()==='img'){
				dom.parentNode.removeChild(dom);
				continue;
			}else if(type===3){
				var val=dom.nodeValue;
				var vallen=val.length;
				if(limit<=0){
					dom.parentNode.removeChild(dom);
				}else if(!/^引用.+在.+的发表$/.test(val)){
					if(vallen>limit){
						dom.nodeValue=val.substring(0,limit)+'...';
					}
					limit=limit-vallen;
				}
			}else if(type===1){
				if(limit<=0){
					dom.parentNode.removeChild(dom);
				}else if(dom.childNodes){
					domarr.push(dom.childNodes);
				}else if(dom.nodeName.toLowerCase()!=='br' || dom.nodeName.toLowerCase()==='img'){
					dom.parentNode.removeChild(dom);
				}
			}
			i++;
		}
	}
	doms=div.getElementsByTagName('*');
	for(var i=0;i<doms.length;i++){
	if(/img/i.test(doms[i].nodeName))
		if((!(doms[i].innerHTML.replace(/^\s+|\s+$/g,'')) && doms[i].nodeName.toLowerCase()!=='br') || 
		   (doms[i].innerHTML==='查看原图' || doms[i].nodeName.toLowerCase()==='img')){
			doms[i].parentNode.removeChild(doms[i]);
		}
	}
	txt=div.innerHTML;
	document.body.removeChild(div);
	return txt;
}
function setValue(value){
	editor.setValue(value);
}

