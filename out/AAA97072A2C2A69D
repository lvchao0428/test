<script type="text/javascript">
function onSubmit(){
	if($('#simpleContainer').val().length > 0){
		$('#submitArrBtn').attr("disabled",true);
	}else{
		$('#submitArrBtn').attr("disabled",false);
	}
	return true;
}
function containerReplace() {
	$('#submitArrBtn').attr("disabled",true);
	$('#simpleContainer').val($('#simpleContainer').val().replace(/\n/g,'<BR>'));
	$('#tag_replyArea').submit();
}
