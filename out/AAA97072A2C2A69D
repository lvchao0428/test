<script type="text/javascript">
$(document).ready(function() {
	var totalPage = 1;
	$('.gopage input').keypress(function(event) {
		if (event.keyCode==13) {
			var page = 1;
			if (this.value > totalPage) {
				page = totalPage;
			} else if (this.value <= 0) {
				page = 1;
			} else {
				page = this.value;
			}
			location.href = 'http://saa.auto.sohu.com/rav4/thread-435761791475661-'+page+'.shtml';
		}
	});
	$('.jumpf .jumpfbox').keypress(function(event) {
		if (event.keyCode==13) {
			onFloorAjax(0);
		}
	});
});
function onFloorAjax(sort){
	var floor=document.getElementsByName("floor");
	for(var i=0; i<floor.length; i++){
		if(floor[i].value) {
			if(floor[i].value==0){
				var floorUrl= "http://saa.auto.sohu.com/rav4/thread-435761791475661-1.shtml#0";
				window.location=floorUrl;
				return false;
			}
			var fv=floor[i].value;
			floor[i].value="";
			Haley.run(['plugins/common/system.js','plugins/request/ajax.js'], function(H){
				var ajax = new H.Ajax({url:'/floor/ajaxFloor.at', method:'post', parameters:{"floor":fv,"sort":sort,"barId":10199,"tid":'435761791475661'}});
				ajax.onComplete = function(responseObject){
					var param = eval('(' + responseObject.textString + ')');
					if(param==-1) {
						Haley.SAA.alert('该楼层不存在！');
						return false;
					}
					if(sort==0) {
						var floorUrl= "http://saa.auto.sohu.com/rav4/thread-435761791475661-"+param+".shtml#"+fv;
					} else {
						var floorUrl= "http://saa.auto.sohu.com/rav4/thread-435761791475661-"+param+"-d.shtml#"+fv;
					}
					window.location=floorUrl;
					return false;
				};
				ajax.start();
		   });
		}
	}
}
</script>
