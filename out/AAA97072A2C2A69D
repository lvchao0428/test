function genFolNoteButton(responseObjectStr,H) {
	var obj = eval("("+responseObjectStr+")");
	var postFolButton = obj['postFolButton'];
	var userid = obj['userid'];
	var needValidateCode = obj['needValidateCode'];
	var canManage = obj['canManage'];
	var canBanUser = obj['canBanUser'];
	var editTopic = obj['editTopic'];
	var canDeletePost = obj['canDeletePost'];
	var canRecommendTopic = obj['canRecommendTopic'];
	var ManagerSearchMananger = obj['ManagerSearchMananger'];
	var jsMsg = obj['jsMsg'];
	var replyTopic = obj['replyTopic'];
	
	if(canManage){
		var object = $("#opera-moderator");
		object.attr("href",URLOption.manageTopic);
		object.show();
	}
	
	if(canDeletePost){
		$(".main-ud").each(function() {   
			var floorId = $(this).attr("floorId");
			var itemId = $(this).attr("itemid");
			var author = $(this).attr("author");
			if(floorId == '0'){
				$(this).append("<span>|</span><a href=\"javascript:deleteTopicItem('435761791475661','"+author+"','false');\" >删除主题</a>");
			} else {
				$(this).append("<span>|</span><a href=\"javascript:deletePosts('435761791475661','"+author+"','" + itemId +"');\">删除回帖</a>");
			}
		});
	}
	
			
	
		var act ="/club/listModify.at?tid=435761791475661&bid=10199&fid=";
		
	$(".main-ud").each(function() {
		var author = $(this).attr("author");
		if(editTopic||canBanUser||userid == author){
			if(act.indexOf("&fid=") > 0){
				var itemId = $(this).attr("itemid");
				$(this).append("<span>|</span><a href='" + act + itemId + "'>编辑</a>");
			} else {
				$(this).append("<span>|</span><a href='" + act + "'>编辑</a>");
			}
		}
	});
	
	
  	//回复框
  	if(replyTopic){
  		var replyArea = document.getElementById("tag_replyArea");
  		replyArea.style.display = "";
  		var vest_ajax = new H.Ajax({url:'/club/ajaxVest.at?bid=10199&_t='+Math.random(), method:"post"});         
		vest_ajax.onComplete = function(responseObject){
			try{
				var retObj = eval('(' + responseObject.textString + ')');
				if(retObj.status=='0'){
					
					var vestHtmlStr = "<td class=\"auth_td\"><input type=\"radio\" name=\"vest\" value="+retObj.vestMasterUid+" checked=\"true\">主账号:"+retObj.vestMasterNickName+"</input><br />";
					vestHtmlStr += "<input type=\"radio\" name=\"vest\" value=\"-1\"/>";
					vestHtmlStr += "<select name=\"vestUserId\" id=\"vestSelectedId\">马甲账号";
					vestHtmlStr += "<option value =\"\">---请选择马甲----</option></select></td>";
					
					document.getElementById('vest_show_id').innerHTML = vestHtmlStr;
					
					var dataArray = eval('(' + retObj.vestJson+ ')');
					
					for(var i=0, ln =dataArray.length; i<ln; i++){	
						var oOption=new Option(dataArray[i].nickNameVest,dataArray[i].userIdVest);   
						document.getElementById('vestSelectedId').options.add(oOption);   
					}
					document.getElementById('vest_show_id').style.display = "";
				}
			}catch(e){
			}
		};
		vest_ajax.start();
  	}
 }

//jQuery 扩展方法
(function($){
	$.fn.extend({
		setCookie: function(sName, sValue, oExpires, sPath, sDomain, bSecure){
			var sCookie = sName + "=" + encodeURIComponent( sValue );
			if(oExpires) sCookie += ";  expires= " + oExpires.toGMTString();
			if(sPath) sCookie += ";  path= " + sPath;
			if(sDomain)	sCookie += ";  domain= " + sDomain;
			if(bSecure) sCookie += ";  secure ";
			document.cookie = sCookie;
		},
		getCookie: function(sName){
			var sRE = "(?:; )?" + sName + "=([^;]*);?";
			var oRE = new RegExp(sRE);	
			if(oRE.test(document.cookie)) return decodeURIComponent(RegExp["$1"]);
			else return null;
		},
		deleteCookie: function(sName, sPath, sDomain){
			this.setCookie(sName, "", new Date(0), sPath, sDomain);
		},
		shareBox:function(webapp) {//百度分享结构
			var that=this;
			var html = [];
			html.push('<div id="bdshare" class="bdshare_t bds_tools get-codes-bdshare" style="display:none">');
			html.push('<div id="bdshare_tb_l" style="border:1px solid #F2F1F1; opacity:0;filter:alpha(opacity=0);z-index:1000;">');
			html.push('<div id="">');
			html.push('<h6>\u5206\u4EAB\u5230</h6>');
			html.push('<ul>');
			for (i in webapp) {
				html.push('<li>');
				html.push('<a class="');
				html.push(i);
				html.push('" href="#">');
				html.push(webapp[i]);
				html.push('</a></li>');
			}
			html.push('</ul></div></div></div>');
			document.body.insertAdjacentHTML('beforeEnd',html.join(''));
		},
		baiduJS:function() {//链接百度分享js
			this.addScript("", {
				id:"bdshare_js",
				data:"type=tools&amp;uid=6794685"
			});
			this.addScript("", {
				id:"bdshell_js"
			});
		},
		trim:function(s) {//去掉空隔
			return s.replace(/^\s*/g,"").replace(/\s*$/g,"");
		},
		addScript:function(src, extra) {//链接百度分享js
			var o = document.createElement("script");
			o.type = "text/javascript";
			if (src != null && this.trim(src) != "") {
				o.src = src;
			}
			if (extra != null && (typeof extra).toLowerCase() == "object") {
				for (var i in extra) {
					o.setAttribute(i, extra[i]);
				}
			}
			document.body.appendChild(o);
		}
	});
})(jQuery);


//标题浮层效果
;(function($){
	function titleInit(){			
		$(window).scroll(function(){fixedtitle()});
		sharePost();
	};

	function fixedtitle(){
		var fixTitle=$('#post_fixtitle_nav');
		var scrollTop=$(document).scrollTop();
		var getcookie=$.fn.getCookie('closeFixed');  
		if(!getcookie||getcookie!="false"){
				if(scrollTop>288){
					fixTitle.show();	
				}else{
					fixTitle.hide();	
				}
				$('.fixtitle_close').on("click",function(){
					$(this).parent().attr("fixtitleStatus","false").hide();
					$.fn.setCookie("closeFixed", false, null,"/", this.domain);//new Date(new Date().getTime() + 31622400000),	
				});		
		}
	}
	
	function sharePost(){
		var autoTimerEnter = null,autoTimerOuter = null;
			$.fn.baiduJS();	
			$("#bdshell_js").attr("src","http://bdimg.share.baidu.com/static/js/shell_v2.js?cdnversion=" + Math.ceil(new Date()/3600000));
			$.fn.shareBox({'bds_qzone':'QQ空间','bds_tqq':'腾讯微博','bds_tsina':'新浪微博','bds_renren':'人人网','bds_tieba':'百度贴吧','bds_more':'更多'});
			var bdshare=$("#bdshare");//百度分享下来框
			var bdshareTbL=$("#bdshare_tb_l");//百度分享下来框 内部
			var shareBtn=$('.bdshareBtn');//分享按钮
			
			for(var i=0;i<shareBtn.length;i++){
				shareBtn.eq(i).hover(function(){
					window.clearTimeout(autoTimerOuter);
					var shareBoxLeft = $(this).offset().left;
					var shareBoxTop = $(this).offset().top+$(this).height();
					autoTimerEnter = window.setTimeout(function(){$("#bdshare").show();$("#bdshare_tb_l").css({"left":shareBoxLeft,"top":shareBoxTop}).stop().animate({"opacity":1},300);},300);
				},function(){
					window.clearTimeout(autoTimerEnter);
					autoTimerOuter = window.setTimeout(function(){$("#bdshare_tb_l").stop().animate({"opacity":0},300,function(){$("#bdshare").hide();})},300);
				});
				$("#bdshare_tb_l").hover(function(){
					window.clearTimeout(autoTimerOuter);
					$("bdshare").show()
					$("bdshare_tb_l").css("opacity",1);	
				},function(){
					$("#bdshare_tb_l").stop().animate({"opacity":0},300,function(){$("#bdshare").hide();});	
				});
			}
	}
	titleInit();
})(jQuery);

