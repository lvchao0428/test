;(function($){
	var preTarget = null;
	function sideInit(){
		$(".grade-infobox-close").on("click",function(){
			$(this).parent().hide();
		});	
		$(".aside-bar-top").on("click",function(){
			$('body,html').animate({scrollTop:0},200);	
		})
		
		$(".do-grade").on("click",function(){
			$(".grade-infobox").show();
			$(".autocode-box").hide();
		});
		$(".scan-autocode").on("click",function(){
			$(".autocode-box").show();
			$(".grade-infobox").hide();
		})
	};

	function getScreenSize(){
		if ($(window).width()<1024) {
			$(".side-wapper").hide();
		}else{
			$(".side-wapper").show();
			sideInit();
		}
	};
	getScreenSize();
})(jQuery)
//E侧边效果
function createChoice(){
	var saaChoice = $('<div class="wPList"></div>');
	$('<div class="Phd"><span>SAA精选</span><a href="http://saa.auto.sohu.com/#saa_essence_community" target="_blank">更多&gt;&gt;</a></div>').appendTo(saaChoice);
	var choicestr = '<div class="csb_list"><ul class="csb_list_ul">';
	$.ajax({
		url:"http://saa.auto.sohu.com/outerapi/clubfeatured/rand.at", 
		type:'post',       
		dataType:'json',    
		success:function(responseObject){
			var obj = responseObject;
			if(obj.STATUS == 0){
				for(var i=0,len =obj.list.length; i<len;i++){
					choicestr += '<li><a href="'+obj.list[i].topicUrl+'#seepic" target="_blank"><img src="'+obj.list[i].imgUrl+'" title="'+obj.list[i].title+'"><span class="csb_list_bg"></span><span>'+obj.list[i].title+'</span></a></li>';
				}
				choicestr +='</ul></div>';	
				$(choicestr).appendTo(saaChoice);
				saaChoice.appendTo($('.wapper980'));
			}
		 }    	
	});
}

var _hasPhotoFrame = '';
$('.photo_frame').click(function(){
	if (!PassportSC.cookieHandle()) {
		Haley.SAA.openPassPort();
		return;
	}
	if (_hasPhotoFrame!='null' && _hasPhotoFrame=='2') return; 
	$.ajax({
		type:"GET",
		url:"http://saa.auto.sohu.com/club/setPhotoFrame.at",
		dataType:"json",
		success: function(data){
			if (data.status=='0') {
				userinfo.user.getObj(function(r){
					$('.con-side').each(function() {
						if ($(this).find('.photo_frame').length>0) {return;}
						var _o = $(this).find('.user-pic');
						if (_o.attr('href').indexOf(r.id)!=-1) {
							_o.before('<em><a class="photo_frame" href="javascript:void(0)">车展装</a></em>');
						}
					});
				});
				_hasPhotoFrame = '2';
				alert('您已成功换上车展装');
			} else {
				_hasPhotoFrame = '0';
				alert('换装的人太多啦，请稍后再试~');
			}
		},
		error:function() {
			_hasPhotoFrame = '0';
			alert('换装的人太多啦，请稍后再试~');
		}
	});
});
</script>

