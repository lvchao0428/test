function submitMessage(obj) {
	if (obj && obj['needBindMobile']) {
		var url = "https://passport.sohu.com/security/bind_mobile?ru=" + obj['ru'];
		window.location = url;
	} else if (obj['ret']) {
		var url = "http://saa.auto.sohu.com/rav4/thread-435761791475661"+"-"+obj['page']+".shtml?"+obj['floor'];
		window.location = url;
	} else if (obj['needAuditFirst']) {
		Haley.SAA.alert("您的帖子已经进入审核列表，审核通过后即可显示。" , function() {
			var url= "http://saa.auto.sohu.com/rav4/thread-435761791475661-1.shtml";
			window.location = url;
		});
	} else {
		Haley.SAA.alert(obj['errormsg']);
		document.getElementById('submitArrBtn').disabled=false;
	}
}
$(document).ready(
function (){
	var hrefText = window.location.href;
	hrefText = hrefText.split("?")[1];
	if(hrefText && hrefText!="" && hrefText != 'undefined'){
		var target = "a[name='"+hrefText+"']";	
		//var h = $(document).height() - $(window).height();
		if(target != "undefined" && target != 'undefined' && target != '' && target != null){
			$(document).scrollTop($(target).offset().top);		
		}
	}	
})

</script>
</div>
   
