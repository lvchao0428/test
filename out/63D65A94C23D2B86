							textHidden.id = "annxe";
							textHidden.value = "";
							form1.appendChild(textHidden);
							sAnnex = textHidden;
					   }
				 	  var value = sAnnex.value;
				 	  if(value!="") {
							value += "|";
					  }
				 	  value += attachNum+","+fileUrl+","+ fileName + "," + "http://js.jrj.com.cn/bbsnew/fckeditor/editor/skins/default/toolbar/uploadfile.gif";
				 	  sAnnex.value = value;
				 	  
						var pTar = document.getElementById("replyPostDetal");
					    if (pTar.contentDocument && pTar.contentDocument.body.offsetHeight){  
					      pTar.height = pTar.contentDocument.body.offsetHeight;   
					    }else if (pTar.Document && pTar.Document.body.scrollHeight){  
