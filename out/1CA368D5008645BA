body = body.replace(/\n\n/ig,"\n"); 
body = body.replace(/\n\n/ig,"\n"); 
body = body.replace(/\n/ig,"\n\n　　"); 
body = body.replace("\n\n",""); 
document.getElementById("fastpostmessage").value=body; 

} 
