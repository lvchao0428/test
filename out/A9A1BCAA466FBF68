var qrshowed = 0;
function doshowqr(){
if (qrshowed == 0) {
//loadImage('imgqrcode','http://chart.apis.google.com/chart?chs=200x200&cht=qr&chld=L|0&chl=http://bbs.oeeee.com/thread-17640879-1-1.html');
