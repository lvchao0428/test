    <script>
  jQuery.fn.autoimg = function(options) {
    var _default = {
        width: 185, /*_每个图片容器宽度*/
        num: 5 /*_默认显示个数*/
    }
	var marTimer;
    var _opts = jQuery.extend({}, _default, options),
        _self = jQuery(this);
    var i = 0,
        p = _self.find("ul"),
        pList = p.find("li"),
        len = pList.length;
    var elePrev = _self.find(".prev"),
        eleNext = _self.find(".next");
    var w = _opts.width,
        num = _opts.num;
    p.css("width", w * len);
	elePrev.removeClass('slider-focus');
    var _prev = function() {
        if(p.css("marginLeft").slice(0,-2) < 0){
			  p.animate({
                marginLeft: -(--i) * w
              }, 1);
			}
       
		if(p.css("marginLeft").slice(0,-2) >= 0){
			clearInterval(marTimer);
			p.css("marginLeft" , -w*(len-5));
			i = 5;
			marTimer = setInterval(_next,2000);
		}
    }

    var _next = function() {
        if (len == 1) {
            return;
        }
       
		if(p.css("marginLeft").slice(0,-2) > -w*(len-5)){
				p.animate({
				 marginLeft: -(++i) * w
				}, 1);
			}
		if(p.css("marginLeft").slice(0,-2) <= -w*(len-5)){
			clearInterval(marTimer);
			p.css("marginLeft" , 0+"px");
			i = 0;
			marTimer = setInterval(_next,2000);
			}
    }
    elePrev.bind('click', _prev);
    eleNext.bind('click', _next);
	marTimer = setInterval(_next,2000);
}
</script>
