    (function() {
        var random = Math.floor(Math.random()*10),
                url = "http://bobo.163.com/a/p2/163.bbssigh/6/boboData/" + random + ".js",
                boboStatTag = "?from=163.bbsSigh",
                boboNum = 6,
                html = "";
        window.boboData = function(data){
            hotLive = data.hotLive;
        };
        NTES.ajax.importJs(url, function() {
            var len = hotLive.length;
            if (hotLive != '' && len != 0){
                for (var i = 0; i < len; i++) {
                    var boboItem = hotLive[i],
                            isLive = boboItem.live,
                            liveHref = isLive ? boboItem.liveUrl + boboStatTag : "http://bobo.163.com/" + boboStatTag,
                            boboLiveStat = isLive ? '<div class="bobo-livestat"></div>' : '',
                            boboHtml = '<a class="bobo-item" title="' + boboItem.anchorExtendTitle + '" target="_blank" href="' +liveHref+ '"><div class="bobo-pic"><img class="bobo-cover" src="'+ boboItem.liveCoverUrl + '" alt="' + boboItem.nick + '"/>' + boboLiveStat + '<div class="bobo-usercount"><span>' + boboItem.onlineUserCount+ '</span><i></i></div></div><div class="bobo-user"><div class="bobo-nick">' + boboItem.anchorExtendTitle + '</div></div><span class="full-hover-show semi-trans"></span><span class="icon-play png24"></span></a>';
                    html += boboHtml;
                };
                NTES(".bobo-list").attr("innerHTML", function() {
                    return this.innerHTML + html;
                });
            }
        }, "utf-8");
    })();
</script>
