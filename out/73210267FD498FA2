					function push(boardid, rootid,posttable,t,div) {
						$.ajax({
							url: "push_dispbbs.asp?boardid="+boardid+"&rootid="+rootid+'&posttable='+posttable+'&t='+t+'&div='+rootid,
							type: "GET",
							cache: false,
							success: function(html){
							$('[id=push_'+rootid+']').html(html);
							}
						});
					}
