<script>
var duf_40_40 = 'http://imgcdn.kdnet.net/upload/userface/NoPic_40_40.jpg';
var defaults = true;
var x=window.x||{};
x.personalInfo=function(info,detailinfo,userid){
	var oinfo=document.getElementById(info);
	var odetailinfo=document.getElementById(detailinfo);
	 oinfo.t=null;
	 oinfo.v=null;
	oinfo.onmouseover=function(){   
		clearTimeout(oinfo.v);
		oinfo.style.zIndex=999;
		
		if(defaults == true) {
		defaults = false;
		oinfo.t=setTimeout(function(){
			var hg = oinfo.getBoundingClientRect().top;		
			if(hg > 180 )	{	
			odetailinfo.style.display="block";
			odetailinfo.className = "usertips clearfix box1";
			}
		    else {
			odetailinfo.style.display="block";
			odetailinfo.className = "usertips clearfix box2";
			}
		},300);

		if ($("#"+detailinfo).html() == '') {
		                var data = {'userid':userid};
						$.getJSON("http://jsapi.kdnet.net/ajax_dangchu.asp?jsoncallback=?",
							data,
							function(obj){
							    $("#"+detailinfo).html(obj.Ajax_Dangchu);
							}); 
	     }
		};
		}
	
	oinfo.onmouseout=function(){
	    defaults = true;
		clearTimeout(oinfo.t);
		oinfo.v=setTimeout(function(){
		oinfo.style.zIndex=500;
		odetailinfo.style.display="none";
		},300);
		}
	}
</script>

