function ip_ajaxFunction(pid)
{var xmlHttp;try{xmlHttp=new XMLHttpRequest();}catch (e){try{xmlHttp=new ActiveXObject("Msxml2.XMLHTTP");}catch (e){try{xmlHttp=new ActiveXObject("Microsoft.XMLHTTP");}catch (e){alert("Ajax failed!");return false;}}}
 xmlHttp.onreadystatechange=function()
      {
      if(xmlHttp.readyState==4){
 
 var iptext = xmlHttp.responseText;
 if(iptext.indexOf("<!--ip-->")>0)
 {
if(document.getElementById('show_ip_'+pid)!=null){
document.getElementById('show_ip_'+pid).style.display="block";
var iptext1 = iptext.split("<!--ip-->");
 iptext = iptext1[1];
var show_ip_id = "show_ip_"+pid;
 document.getElementById(show_ip_id).innerHTML="IP:"+iptext;
}
}
        }
      }
var uurl = "api/ip.php?pid="+pid;
    xmlHttp.open("POST",uurl,true);
    xmlHttp.send(null);
 
 }
 </script>
