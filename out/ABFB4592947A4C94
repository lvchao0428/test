		function getBrz(obj, type){
			if (!obj.data("brzdata")) {
			    jQuery.getJSON("http://webbiz.xici.net/biz.asp?from=doc&sid=5526666D7C2F1F61&tags=语言培训 英语 育儿 少儿英语 心理咨询 家长论坛 培训机构 中小学教育 英语学习 英语培训 @1165392@&clubid=2672&jsoncallback=?", function (data) {
			        obj.html(data.Addocsidebar).data("brzdata", data).show();
			        if (type == "another") {
			            jQuery("#tag_li_zt").show();
			            obj.next().hide();
