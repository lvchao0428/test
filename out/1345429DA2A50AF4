function comiis_scrolltoptgoh() {
var scrollHeightvrxq = parseInt(document.body.getBoundingClientRect().top);
if (BROWSER.ie && BROWSER.ie < 7) {
var scrolltopjddh = $('comiis_scrolltop');
var viewPortHeightcrtx = parseInt(document.documentElement.clientHeight);
var shkoru = scrolltopjddh.clientHeight;
scrolltopjddh.style.top = viewPortHeightcrtx - scrollHeightvrxq - shkoru - 70 + 'px';
}
if (scrollHeightvrxq < -100) {
$('comiis_gotop').style.visibility = 'visible';
} else {
$('comiis_gotop').style.visibility = 'hidden';
}
}
