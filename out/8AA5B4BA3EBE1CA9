		var docData = {"result":{"autologon":0,"bd_hide":0,"Bd_Topic":[],"BdStyle":"<style>\r\nbody{background-color:#000000;background-image:url(http://files.xici.net/d183481963.1/civicr-wall6-1600.jpg);background-attachment:fixed;}\r\ntd,p,span,.p9,small,.doc_txt{color:#FFFFFF;}\r\n.tab_link,.tab_link:hover,.tab_link:visited {color:#EE0000;}\r\na,a:hover,a:visited {color: #FFFFFF;}\r\n.title,.LightText {color:#FF0000;}\r\n.tab_sub {background-color:#000000;border-bottom-color:#000000;}\r\n.tab_sub td,.tab_sub a,.tab_sub a:hover,.tab_sub a:visited,.board_bg a,.board_bg a:hover,.board_bg a:visited{color:#FF3333;}\r\n.tab_normal {background-color:#000000;border-left-color:#000000;border-right-color:#000000;}\r\n.tab_left {background-color:#000000;border-left-color:#000000;}\r\n.tab_sel {color:#FFFFFF;background-color:#000000;border-left-color:#000000;border-right-color:#000000;}\r\n.tab_right {background-color:#000000;border-right-color:#000000;}\r\n.tab_top,.tab_top_left,.tab_top_right,.tab_normal_td {border-bottom-color:#000000;}\r\n.tab_sel_td {border-bottom-color:#000000;}\r\n.board_t {border-bottom-color:#FFFFFF;}\r\n.board_bg {background-color:#000000;border-bottom-color:#000000;border-top-color:#000000;color:#FF3333;}\r\n.board_bg_0 {background-color:#000000;}\r\n.board_bg_1 {background-color:#000000;}\r\n.board_bg_0 td,.board_bg_1 td {border-top-color:#FFFFFF;}\r\n.visited a,.visited a:hover,.visited a:visited {COLOR: #3399FF;}\r\n.doc_td {border-top-color:#000000;border-bottom-color:#000000;}\r\n.doc_td2 {border-top-color:#000000;}\r\n.doc_sign {color:#FF0000;}\r\n.vote_bar {background-color:#FF3535;border-bottom-color:#CC0000;border-top-color:#FF0000;}\r\n.navi_left,.navi_right {border-bottom-color:#000000;color:#FFFFFF;}\r\n.navi_null,.navi_selected {border-color:#000000;}\r\n.navi_null,.navi_selected {border-color:#000000;}\r\n.sBdMenu {color:#EE0000;background-color:#000000;}\r\n.topic span a,.topic span a:visited {color:#FFFFFF}\r\n.topic, .topic a,.topic a:v