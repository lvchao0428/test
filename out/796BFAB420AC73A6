			var u; eval('u=' + trans.responseText);
			var oinfo = crt('SPAN', { id: 'uInfo' }, $id('divHRight'));
			var h;
			u.homeUrl = '/u_' + u.id + '/_d.aspx';
			window.hexunUser = u;
