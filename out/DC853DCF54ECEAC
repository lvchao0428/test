(function(){

function $$(id){return document.getElementById(id);};
var options=$$("J-searOption").getElementsByTagName("a");
var targets=[$$("option2"),$$("option3"),$$("option4"),$$("option1")];
for(var k=0;k<targets.length;k++){targets[k].selected=true;};
for(var i=0;i<options.length;i++)
{
options[i].onclick=function()
{
if(this.className!="cur")
{
   var value=this.id!="option1E"?false:true;
for(var j=0;j<options.length;j++)
{
options[j].className="";
if(j<3){targets[j].selected=value;};
};
this.className="cur";
$$(this.id.substring(0,this.id.length-1)).selected=true;

}
}
};

})();
</script>

