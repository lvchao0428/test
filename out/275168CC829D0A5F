		function getBrz(obj, type){
			if (!obj.data("brzdata")) {
			    jQuery.getJSON("http://webbiz.xici.net/biz.asp?from=doc&sid=5C85B72330F37E96&tags=高校 中国药科大学 院校 药大 考研 大学校园 校园生活 中国药科大 药学类 南京 @3486@&clubid=1265&jsoncallback=?", function (data) {
			        obj.html(data.Addocsidebar).data("brzdata", data).show();
			        if (type == "another") {
			            jQuery("#tag_li_zt").show();
			            obj.next().hide();
			        } else {
			            if(jQuery("#Adygdoc")){
			                jQuery("#Adygdoc").html(data.Adygdoc);
			            }
			            jQuery("#Adygdoc1").html(data.Adygdoc1);
			            jQuery("#middoc").html(data.middoc);
			        }
			        obj.find("li").each(function () {
			            jQuery(this).addClass(jQuery(this).index() % 2 == 0 ? 'fl' : 'fr');
			        });
			    });
			}
		}

		function light_box() {
	    	//登陆后才给看幻灯片，o(∩_∩)o
	    	if (G_UID > 0) {
