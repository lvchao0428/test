        function addFriend() {
            if (!autohome.UserValidate()) return;
            if (tz.topTopicOwnerId > 0) {
                setTimeout(function () {
                    $.ajax({
                        type: "post",
                        cache: false,
                        url: "/ajax/addFriend",
                        data: { otherMemberId: tz.topTopicOwnerId },
                        dataType: "jsonp",
                        jsonp: "callback",
                        jsonpCallback: "jsonpCallback",
                        success: function (data) {
                            //console.log(data);
                            if (data && data.sucess == -1) {
                                alert("您的部分权限已被禁止，暂时无法关注他人。如有疑问请咨询客服4000-111-168。");
                            } else if (data && data.sucess == 1 || data.sucess == 500) {
                                $("#wrap_addfollower").html('已关注'); $("#wrap_addfollower").addClass("leftgray2 fl gray");
                            } else if (data && data.sucess == 3) {
                                $("#wrap_addfollower").html('相互关注'); $("#wrap_addfollower").addClass("leftgray fl gray");
                            } else {
                                $("#wrap_addfollower").html('<a href="#" onclick="addFriend()" class="c01439a">加关注</a>');
                                $("#wrap_addfollower").addClass("leftgz fl");
                            }
                        },
                        error: function (err) {
                            //alert("err:" + err);
                        }
                    });
                }, 500);
            }
        }
