                    if (referrerInfo.toLowerCase().indexOf("showpicclass_43_1.html") > 0) {
                        showJunphAd = true;
                    }
                }
                if(ForumID ==292|| ForumID ==293|| ForumID ==291|| ForumID ==294|| ForumID ==283 || ForumID == 219 ||ForumID == 79 ||ForumID == 260 || showJunphAd) {
                    BAIDU_CLB_singleFillSlot("445637");
                }
                else {
                    BAIDU_CLB_singleFillSlot("80066");
                }
            }
        }      

        if (islocked > 0) {
            $("#ReplyFrame").height("0px");
            $("#ReplyFrame").hide();
            $("#noreplyspan").show();
            $("#replyUserMsg").hide();
        }
    </script>
