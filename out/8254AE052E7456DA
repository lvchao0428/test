<script>
$(document).ready(function(){
var tips_status = false;
var timer; 
timer = null;
$('span').find('a.tips').hover(function(){
       //鼠标移动上面执行
       //鼠标移动时 
       //获取到需要弹出浮动框的元素obj 	    
		if ( tips_status == false ){
		    if ($('#description').size() > 0 ) closeDiv("description");
			clearTimeout(timer);
		    divobj =  $(this);
			//获取obj的位置，left及top，IE及FF3.0以上都支持 
			divobjleft = divobj.offset().left;
			divobjtop = divobj.offset().top + divobj.outerHeight(); 
			//为弹出的div的left，top赋值 
			divobjx = divobjleft + 0	//弹出的div距离obj左边的距离，取实际值 ; 
			divobjy = divobjtop - 35	//弹出的div距离obj顶部的距离，取实际值 ;
			//计算对象可见高度
			var hg =  this.getBoundingClientRect().top;
			
			var cs = '';
						if(hg > 180 ){
							  cs = "usertips clearfix box1";
							  divobjy = divobjy + 20;
							  if ($.browser.msie && ($.browser.version == "6.0") && !$.support.style) 
							  {
								   divobjy = divobjy - 120;
							  }
						}
						else{
							  cs =  "usertips clearfix box2";
							  divobjy = divobjy + 40;
						}
          timer = setTimeout(function(){
						if ($('#description').size() == 0 ){
						var data = {'username':escape(divobj.attr('title')),'width':escape(divobjx),'height':escape(divobjy),'class':escape(cs)};
													$.getJSON("http://jsapi.kdnet.net/ajax_dangchu_username.asp?jsoncallback=?",
														data,
														function(obj){
														  
														   if ($('#description').size() == 0 ) document.body.insertAdjacentHTML("afterBegin", obj.Ajax_Dangchu); 
														}); 
						}
		//通过insertAdjacentHTML来写入到html内（这个参数火狐不支持，但是可能通过兼容代码 让火狐兼容insertAdjacentHTML 属性，兼容代码不长，就几十行） 
		
		tips_status = true;
		},500);
	  }
},function(){
    //鼠标移开事件默认状态false
	tips_status = false;
	window.clearTimeout(timer);
    
    //浮窗事件
	$('#description').hover(function(){
		tips_status = true;
	},function(){
	    //浮窗移开事件
		if ($('#description').size() > 0 ) closeDiv("description");
		tips_status = false;
	}); 
    
    //延时判断状态
	setTimeout(function(){ 
		if (tips_status == false  && $('#description').size() > 0) closeDiv("description");
	}, 100); 
    
}) ;

//浮窗事件
$('#description').hover(function(){
	tips_status = true;
},function(){ 
    //浮窗移开事件
	if ($('#description').size() > 0) closeDiv("description");
	tips_status = false; 
}); 

//Start 兼容代码 让火狐兼容insertAdjacentHTML 属性
if (typeof HTMLElement != "undefined" && !HTMLElement.prototype.insertAdjacentElement) { 
    HTMLElement.prototype.insertAdjacentElement = function (where, parsedNode) { 
        switch (where) { 
            case "beforeBegin": 
                this.parentNode.insertBefore(parsedNode, this); 
                break; 
            case "afterBegin": 
                this.insertBefore(parsedNode, this.firstChild); 
                break; 
            case "beforeEnd": 
                this.appendChild(parsedNode); 
                break; 
            case "afterEnd": 
                if (this.nextSibling) { 
                    this.parentNode.insertBefore(parsedNode, this.nextSibling); 
                } else { 
                    this.parentNode.appendChild(parsedNode); 
                } 
                break; 
        } 
    }; 
    HTMLElement.prototype.insertAdjacentHTML = function (where, htmlStr) { 
        var r = this.ownerDocument.createRange(); 
        r.setStartBefore(this); 
        var parsedHTML = r.createContextualFragment(htmlStr); 
        this.insertAdjacentElement(where, parsedHTML); 
    }; 
    HTMLElement.prototype.insertAdjacentText = function (where, txtStr) { 
        var parsedText = document.createTextNode(txtStr); 
        this.insertAdjacentElement(where, parsedText); 
    }; 
} 
// End 兼容代码 让火狐兼容insertAdjacentHTML 属性
});

