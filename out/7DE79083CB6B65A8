<script type="text/javascript">
var cdomain = "http://bbs1.people.com.cn";
var mdomain = "http://bbs1.people.com.cn";
	var officialPost = 0;
var snsdomain="http://sns.people.com.cn";
 $(document).ready(function(){
	rmw.global.setSNSDomain("http://sns.people.com.cn") ;
	RMWSSO.getUserData(function(guzzLoginUser){
		if(guzzLoginUser && guzzLoginUser.userId > 0){
		 	var displayName = guzzLoginUser.nickname;
			var userNick = guzzLoginUser.nickname;
			var userId = guzzLoginUser.userId;
			$("#loginHeaderUserNick").html(displayName+"<i></i>") ;
			$(".loginUserNick").show();
			$(".guest").hide();
			$(".forumEditorUserNick").html('<a href="/userInfo.do?userNick='+userNick+'" target="_blank">'+displayName+'</a>');
			$("#formEditorPostListImg").attr("userNick",userNick);
			$(".showWidth").attr("userId",userId);
			var showWidth = getCookie("BBS_SHOW_WIDTH"+userId);
			var showWidthClick = "#showWidth"+showWidth;
			$(showWidthClick).click();
			var _userName =  guzzLoginUser.username;
			$("#tableView").attr("userName",_userName);
			$("#treeView").attr("userName",_userName);
			$(".notAuthorOnly").attr("userName",_userName);
	    	loadNewsCount();
		}else{
		    var retUrl = encodeURI(top.location.href);
			$(".msgTips").remove();
			$(".userReg").attr("href",rmw.sns.regUserLink("bbs",true));
		}
	});
	rmw.global.bindUserPortraits($("img.portrait", $(document))) ;
  });
</script>

<script>  
var imgUrl ="";
	imgUrl = 'http://bbs1.people.com.cn/images/weixinlogo.jgp';


var lineLink = 'http://bbs1.people.com.cn/post/1/1/2/146042202.html';  
var descContent = "人大代表提的科研经费报销提案，应该引起重视，如果让一群不做事的人来管理做事的人，让科研人员为报账低三下气失去做人尊严，还有意义吗";  
var shareTitle = '人大代表提的科研经费报销提案，应该引起重视，如果让一群不做事的人来管理做事的人，让科研人员为报账低三下气失去做人尊严，还有意义吗';  
var appid = 'wxce319a0146ca3f28';  
  
function shareFriend() {  
    WeixinJSBridge.invoke('sendAppMessage',{  
                            "appid": appid,  
                            "img_url": imgUrl,  
                            "img_width": "640",  
                            "img_height": "640",  
                            "link": lineLink,  
                            "desc": descContent,  
                            "title": shareTitle  
                            }, function(res) {  
                            _report('send_msg', res.err_msg);  
                            })  
}  
function shareTimeline() {  
    WeixinJSBridge.invoke('shareTimeline',{  
                            "img_url": imgUrl,  
                            "img_width": "640",  
                            "img_height": "640",  
                            "link": lineLink,  
                            "desc": descContent,  
                            "title": shareTitle  
                            }, function(res) {  
                            _report('timeline', res.err_msg);  
                            });  
}  
function shareWeibo() {  
    WeixinJSBridge.invoke('shareWeibo',{  
                            "content": descContent,  
                            "url": lineLink,  
                            }, function(res) {  
                            _report('weibo', res.err_msg);  
                            });  
}  
// 当微信内置浏览器完成内部初始化后会触发WeixinJSBridgeReady事件。  
document.addEventListener('WeixinJSBridgeReady', function onBridgeReady() {  
  
        // 发送给好友  
        WeixinJSBridge.on('menu:share:appmessage', function(argv){  
            shareFriend();  
            });  
  
        // 分享到朋友圈  
        WeixinJSBridge.on('menu:share:timeline', function(argv){  
            shareTimeline();  
            });  
  
        // 分享到微博  
        WeixinJSBridge.on('menu:share:weibo', function(argv){  
            shareWeibo();  
            });  
        }, false);  
</script>
