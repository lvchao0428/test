function setIL(d){
    if(!d)return;
    var id = d[0];
    var ld = d[1];
    var odivs = $tags('div');
    var rI = 0;
    for(var i=0;i<odivs.length;i++){
        if(odivs[i].className.indexOf('ipedit')>-1){
            var od = odivs[i];
            var spn = $tag('SPAN',od);
            if(spn){
                var oi = $tag('SPAN',spn,0);
                var ol = $tag('SPAN',spn,1);
                if(oi && ol){
                    oi.innerHTML = id[rI];
                    ol.innerHTML = ld[rI];
                }
            }
            rI ++;
        }
    }
}


