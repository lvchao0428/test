			jQuery.fn.sidebarFixed = function (options){
				var _default = {
					className:"sidebar-fixed"
				};
				var _opts = jQuery.extend({},_default,options);
				//取窗口滚动条高度
				var getScrollTop = function() {
					var scrollTop = 0;
					if (document.documentElement && document.documentElement.scrollTop) {
						scrollTop = document.documentElement.scrollTop;
					} else if (document.body) {
						scrollTop = document.body.scrollTop;
					}
					return scrollTop;
				}
				// 取窗口可视范围的高度
				var getClientHeight = function() {
					var clientHeight = 0;
					if (document.body.clientHeight && document.documentElement.clientHeight) {
						clientHeight = (document.body.clientHeight < document.documentElement.clientHeight) ? document.body.clientHeight : document.documentElement.clientHeight;
					} else {
						clientHeight = (document.body.clientHeight > document.documentElement.clientHeight) ? document.body.clientHeight : document.documentElement.clientHeight;
					}
					return clientHeight;
				}
				// 取文档内容实际高度
				var getScrollHeight = function() {
					return Math.max(document.body.scrollHeight, document.documentElement.scrollHeight);
				}
				return jQuery(this).each(function() {
					var fixedDiv = jQuery(this);
					var H = 0;
					var Y = fixedDiv.get(0);
					while (Y) { H += Y.offsetTop;Y = Y.offsetParent};
					jQuery(window).scroll(function (){
						var s = document.body.scrollTop || document.documentElement.scrollTop;
						s > H ? fixedDiv.removeClass("sidebar-fixed-bottom").addClass(_opts.className) : fixedDiv.removeClass(_opts.className);
						if ( getScrollHeight()  == (getScrollTop() + getClientHeight()) ) {
							fixedDiv.removeClass(_opts.className).addClass("sidebar-fixed-bottom");
							getBrz(jQuery(".zt_numlist").eq(0), 'another');
						}
						if (getScrollTop() < 100) {
							fixedDiv.removeClass(_opts.className).removeClass("sidebar-fixed-bottom");
						}
					});
				});
			}
			jQuery("#sidebar-bd").sidebarFixed();
			jQuery.fn.tagsCloud = function () {
				var self = this;
				this.rand = function (num) {
					return parseInt(Math.random() * num + 1)
				};
				this.randomcolor = function (){
					var str = Math.ceil(Math.random() * 16777215).toString(16);
					str.length < 6 ? str = "0" + str : "";
					return str;
				};
				return jQuery(this).each(function() {
					jQuery(this).css({
						"color":"#" + self.randomcolor(),
						"fontSize": self.rand(3) + 11 + "px"
					})
				});
			};
			jQuery(".moretags a").tagsCloud();
		});

