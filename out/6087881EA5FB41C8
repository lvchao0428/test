            <div class="tie-con">
                <div class="tie-con-hd tie-con-hd-sub">
                    <div class="tie-con-hd-panel tie-con-hd-panel-sub">
                                                <span class="time" id="floor-6"> 6楼&nbsp;&nbsp; 2015-10-25 23:24:15</span>
                         <a name="1" href="javascript:;" class="report-whistle btn-dialog js-report" title="举报" action="report" data='{"boardId":"shishi","threadId":584397358 ,"postId":584524708}'>举报</a>
                                                                                                    <div class="board-manage">
                            <div class="dd-window js-dd-wraper">
                                管理<em class="icon-arrow-up"></em>
                                <ul class="board-menu">
                                    <script type="text/template" class="js-postTemp">
                                      <%for(var i=0;i<list.length;i++){%>
                                                                                         									            <%if(list[i].opId=="modify"){%>
