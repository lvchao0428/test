                                                <%}%>
                                                                                              <%if(list[i].opId=="delete"){%>
                                                <li class="gt-master"><a href="javascript:;" class="btn-dialog"  action="deleteThread" title="删除" data='{"boardId":"shishi","threadId":"584397358" ,"postId":"584524708","isMain":0,"floor":"6"}' title="删除">删除</a></li>
