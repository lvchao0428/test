<script language="JavaScript">var imgpath = 'images';var verifyhash = '1bebf8ee';var modeimg = '';var modeBase = '';var winduid = '';var windid	= '';var groupid	= 'guest';var basename = '';var temp_basename = '';

function shiftStyle(){
	if (getObj('widthCfg').innerHTML=='[切换到宽版]') {
		if(!getObj('fullscreenStyle')) {
	var l = document.createElement('link');
	l.id="fullscreenStyle";
	l.rel="stylesheet";
	l.type="text/css";
	l.href="images/fullscreen.css";
	l.media="all";
	document.body.appendChild(l);
		}else {
getObj('fullscreenStyle').disabled = false;
		}
		getObj('widthCfg').innerHTML='[切换到窄版]';
		var widthCfg = 1;
	} else {
		var widthCfg = 0;
		getObj('fullscreenStyle').disabled=true;
		getObj('widthCfg').innerHTML='[切换到宽版]';
	}
	SetCookie('widthCfg',widthCfg);	
};
function shiftStyle2(){
	if (getObj('widthCfg').innerHTML=='[宽版]') {
		if(!getObj('fullscreenStyle')) {
	var l = document.createElement('link');
	l.id="fullscreenStyle";
	l.rel="stylesheet";
	l.type="text/css";
	l.href="images/fullscreen.css";
	l.media="all";
	document.body.appendChild(l);
		}else {
getObj('fullscreenStyle').disabled = false;
		}
		getObj('widthCfg').innerHTML='[窄版]';
		var widthCfg = 1;
	} else {
		var widthCfg = 0;
		getObj('fullscreenStyle').disabled=true;
		getObj('widthCfg').innerHTML='[宽版]';
	}
	SetCookie('widthCfg',widthCfg);	
};

</script>

